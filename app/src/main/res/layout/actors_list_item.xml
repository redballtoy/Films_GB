<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_1x"
    android:layout_marginEnd="@dimen/margin_1x"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_actor_foto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/chris_evans"
        android:src="@drawable/chris_evans"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_actor_name"
        style="@style/textWhiteStyle"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:layout_marginTop="6dp"
        android:gravity="start|top"
        android:lines="2"
        android:text="@string/actor_name"
        android:textColor="@color/actorsNameColor"
        android:textStyle="bold" />
</LinearLayout>