<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Films_GB" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textWhiteStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:shadowDx">0</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12.0</item>
        <item name="android:shadowColor">@color/shadow_color</item>

    </style>

    <style name="textDefStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grayColor</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="tagStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/taglineColor</item>
        <item name="font">@font/roboto</item>
    </style>

    <style name="ratingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/blue_background</item>
        <item name="colorControlActivated">@color/taglineColor</item>
        <item name="android:transformPivotX">0dp</item>
        <item name="android:transformPivotY">0dp</item>
        <item name="android:progressBackgroundTint">@color/grayColor</item>
        <item name="android:progressTint">@color/taglineColor</item>
    </style>


</resources>